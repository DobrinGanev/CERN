{
  "name": "CERN",
  "description": "Cassandra, Express, React and NodeJS.",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DobrinGanev/CERN.git"
  },
  "homepage": "https://github.com/DobrinGanev/CERN",
  "keywords": [
    "react",
    "react-router",
    "isomorphic",
    "starter",
    "boilerplate",
    "template",
    "webpack",
    "redux",
    "redux-dev-tools",
    "Cassandra database",
    "Express"
  ],
  "main": "dist/server.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 -c \"node --harmony\" ./dist/server.js",
    "build-server": "webpack --colors --display-error-details --config configs/webpack.server.js",
    "build-client": "webpack --colors --display-error-details --config configs/webpack.client.js",
    "build": "concurrently \"npm run build-server\" \"npm run build-client\"",
    "watch-server": "webpack --watch --verbose --colors --display-error-details --config configs/webpack.server-watch.js",
    "watch-server-start": "node node_modules/just-wait --pattern \"dist/*.js\" && npm run start",
    "watch-client": "webpack-dev-server --config configs/webpack.client-watch.js",
    "production": "cross-env NODE_ENV=production npm run build && cross-env NODE_ENV=production npm run start",
    "dev": "concurrently --kill-others \"npm run watch-server-start\" \"npm run watch-server\" \"npm run watch-client\"",
    "postinstall": "webpack -p --config configs/webpack.client.js"
  },
  "dependencies": {
    "babel": "6.5.2",
    "babel-core": "6.13.2",
    "babel-loader": "6.2.5",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "^6.14.0",
    "bluebird": "^3.4.6",
    "cassandra-driver": "^3.1.1",
    "concurrently": "^2.2.0",
    "cross-env": "^2.0.0",
    "dotenv": "^2.0.0",
    "eslint": "^3.4.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "file-loader": "^0.9.0",
    "forever": "0.15.2",
    "inert": "^4.0.1",
    "isomorphic-fetch": "^2.2.1",
    "piping": "1.0.0-rc.3",
    "radium": "^0.18.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.0",
    "react-router-redux": "^4.0.5",
    "react-tap-event-plugin": "1.0.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "webpack": "^1.13.1",
    "webpack-node-externals": "^1.3.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-root-import": "^4.1.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.1.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-react": "^6.1.2",
    "http": "0.0.0",
    "json-loader": "^0.5.4",
    "just-wait": "1.0.5",
    "nock": "^8.0.0",
    "react-addons-test-utils": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-hot-loader": "^1.3.0",
    "redux-ava": "^2.1.0",
    "webpack-dev-server": "^1.14.1"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "failFast": true,
    "serial": true,
    "verbose": true
  },
  "babel": {
    "presets": [
      "react"
    ]
  }
}
